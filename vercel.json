{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "250mb",
                "runtime": "python3.9"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ],
    "functions": {
        "app.py": {
            "maxDuration": 30
        }
    },
    "env": {
        "FLASK_ENV": "production",
        "PYTHONPATH": ".",
        "SUPABASE_URL": "@supabase-url",
        "SUPABASE_KEY": "@supabase-key",
        "SUPABASE_BUCKET": "@supabase-bucket"
    },
    "regions": ["iad1"]
}
